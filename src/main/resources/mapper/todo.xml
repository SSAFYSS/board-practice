<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafyss.board_practice.domain.todo.dao.TodoDao">

    <insert id="insertTodo" parameterType="com.ssafyss.board_practice.domain.todo.entity.Todo">
        insert into Todo (userId, content)
        values (#{userId}, #{content});
    </insert>

    <select id="findTodosByUserId" resultType="com.ssafyss.board_practice.domain.todo.dto.ReadTodoResponse">
        select id, userId, content, completed, createdAt, updatedAt
        from Todo
        where userId = #{userId}
          and deleted != true
    </select>

    <update id="deleteById">
        update Todo
        set deleted   = true,
            deletedAt = now()
        where id = #{id};
    </update>

</mapper>
