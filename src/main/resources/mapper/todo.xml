<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafyss.board_practice.todo.infrastructure.repository.TodoRepository">

    <select id="findAllTodo" resultType="Todo">
        select *
        from todo
    </select>

    <select id="findById" resultType="Todo">
        select *
        from todo
        where id = #{id}
    </select>

    <update id="createTodo" parameterType="Todo" keyProperty="id" useGeneratedKeys="true">
        insert into todo(userId, content)
        values (#{userId}, #{content})
    </update>

</mapper>
